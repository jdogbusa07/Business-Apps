using System;

class Program
{
    static void Main()
    {
        Console.Write("Assign an integer value to (N): ");
        int N = int.Parse(Console.ReadLine());

        // loop each row
        for (int i = 1; i <= N; i++)
        {
            for (int j = 1; j <= i; j++)
            {
                Console.Write("* ");
            }
            // move to next line after each row is printed
            Console.WriteLine();
        }
    }
}
