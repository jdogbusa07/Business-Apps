using System;

class Program
{
    static void Main()
    {
        Console.Write("Assign an integer value to (N): ");
        int N = int.Parse(Console.ReadLine());

        // loop through rows
        for (int i = 0; i < N; i++)
        {
            // loop through columns
            for (int j = 0; j < N; j++)
            {
                // make asterisk for each cell
                Console.Write("* ");
            }
            // create new line after each row is printed
            Console.WriteLine();
        }
    }
}
